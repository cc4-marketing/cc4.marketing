  { icon: 'ðŸ¤–', title: 'Custom Agents', description: 'Build your own AI team. Brand guardian, SEO specialist, copywriter.' },
  { icon: 'ðŸ“ˆ', title: 'Compound Growth', description: 'Every campaign gets faster. Every project builds on the last.' },
];

const modules = [
  {
    number: 0,
    title: 'Getting Started',
    description: 'Set up Claude Code and establish your foundation for success.',
    lessonCount: '3 Lessons â€¢ 30 minutes',
    lessons: ['Introduction', 'Installation', 'Start & Clone'],
